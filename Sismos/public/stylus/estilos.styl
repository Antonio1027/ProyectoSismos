@import "normalize.styl"
@import "icon.styl"

gris-claro = #eee
gris-oscuro = #bbb
verde = #6cac4b
celeste = #8ec1da
rojo-claro = #ed1c24
rojo-oscuro = #b22227
amarillo-claro = #ffcf06
amarillo-oscuro = #f89b1c
verde-claro = #00a651
verde-oscuro = #00652e
azul-claro = #43ace1
azul-oscuro = #005e9a

body
html
	font-size 16px
	margin 0
	padding 0
	background gris-claro
header
	z-index 2
	background white
	position fixed
	margin-bottom 1em
	top 0
	left 0
	right 0
section
	padding 1em
	width 52em
	margin 3em auto
ul
	margin 0
	padding 0
li
	list-style none
a
	text-decoration none
	color black
h1 
h2
h3
	font-weight lighter
textarea
	resize none
input
select
textarea
	border 1px solid gris-oscuro
	transition all 0.3s
	&:focus
		border 1px solid rgba(82,168,236,0.8)
		outline 0
		box-shadow inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(82,168,236,0.6)
// OCSS
.error
	color red
	font-style italic
.content
	background white
	padding 1em
.pointer
	cursor pointer
.right
	float right
.left
	float left
.icon
	font-size 1.5em	
	display inline-block
	margin-right 0.3em
	transition all 0.5s
.w100
	width 90% !important
.w50
	width 40% !important
.w25
	width 25% !important
.w15
	width 15% !important
.w10
	width 10% !important
.inline-block
	display inline-block
.block
	display block
.text-center
	text-align center
.block-center
	margin 0 auto
.padding
	padding 0.3em
.margin-bottom
	margin-bottom 1em
.btn
	display inline-block
	border-radius 3px
	padding 0.5em 1em
	background gris-claro
	border 0
	text-decoration none
	&:hover
		background gris-oscuro
.btn-red
	color white
	background rojo-claro
	&:hover
		background rojo-oscuro
.btn-yellow
	background amarillo-claro
	&:hover
		background amarillo-oscuro
.btn-blue
	color white
	background azul-oscuro
	&:hover
		background azul-claro
.btn-green
	color white
	background verde-claro
	&:hover
		background verde-oscuro
input
select
textarea
.category
	&.ng-invalid
	&.invalid
		border-radius 5px
		border 1px solid rgba(255, 0, 0, 0.8)
		outline 0
		box-shadow inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(219, 14, 61, 0.6)
// ngAnimate
.blur
	transition ease-in-out 0.8s
	&.ng-hide-add
		opacity 1
	&.ng-hide-add-active
		opacity 0
	&.ng-hide-remove
		opacity 0
	&.ng-hide-remove-active
		opacity 1
	&.ng-enter
		opacity 0
	&.ng-enter-active
		opacity 1
	&.ng-leave
		opacity 1
	&.ng-leave-active
		opacity 0
// CSS
.login
.home
	margin 7% auto
.menu
	margin 0 auto
	width 52em
	position relative
	.item
		padding 0.5em
		display inline-block
		font-size 0.9em
		border-bottom 3px solid transparent
		transition .5s all
		&:hover
			border-bottom 3px solid verde
			.icon
				transform: scale(1.3,1.3)
		&.logo
			border-bottom 0
			position absolute
			right 0
			top 0
// banner-left
.banner-left
	width 9em
	float left
.banner-left-box
	font-size 3em
.banner-left-content
	padding 1em
	background white
	border-radius 0 0 5px 5px
	.list-item
		line-height 1.5em
		vertical-align top
		cursor pointer
		transition .5s all
		border-right 3px solid transparent
		&:hover
			border-right 3px solid verde
			.icon
				transform: scale(1.3,1.3)
.banner-left-section
	border-radius 5px
	margin-bottom 1em
	span
	input
		margin 3px 0
.banner-left-option
	font-size 0.8em
.box
	background verde
	color white
	border-radius 5px 5px 0 0
	text-align center
	h1
		margin 0
		padding 0.5em 0
// banner-right
.banner-right
	width 40em
	float right
	border-radius 5px
.category
	margin-bottom 1em
.category-title
	margin 0
	text-align center
	background gris-oscuro
	border 1px solid #aaa
	padding 0.2em
	border-radius 5px 5px 0 0
	cursor pointer	
.category-content
	background white
	padding 1em
.consultrecords
	text-align center
	margin-bottom 1em
.fieldrecords
	&:nth-child(even)
		// background gris-claro
	text-align center
	border-bottom 1px dashed gris-oscuro
	padding 1em 0
// table
.table-cell
	tr
		border 1px solid gris-oscuro
		&:nth-child(even)
			background #c0dcc0
.table
	width 100%
	margin 0 auto
	font-size 0.8em
	margin-bottom 1em
	border-radius 5px
	.title
		text-align center
		background gris-claro
		border-bottom 1px solid gris-claro
	td
		padding 0.3rem
//Maps
.map
	width 30em
	height 30em
	padding 0.5em
	background gris-claro
	margin-bottom 1em
.manager
	background white
	box-shadow 0px 0px 7px azul-oscuro
	border-radius 5px
	position relative
	.btn-new
		position absolute
		right 0.5em
		top 0.5em
	h1
		text-align center
	.fieldsearch
		text-align center
		margin-bottom 3em
.user-item
	text-align center
	&:nth-child(even)
		background #c0dcc0
	td
		padding 0.3em 0